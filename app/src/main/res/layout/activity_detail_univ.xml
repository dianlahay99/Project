<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailUniv">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/header_kampus"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_arrow_back_black_24dp"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-82dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/group"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="3dp">



                    <ImageView
                        android:layout_width="170px"
                        android:layout_height="160px"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ipb"/>

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="110dp"
                        android:textSize="18dp"
                        android:text="Institud Pertanian Bogor"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="23dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <View android:layout_width="2dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="90dp"
                            android:background="#bbb"/>

                        <View android:layout_width="2dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="220dp"
                            android:background="#bbb"/>


                        <TextView
                            android:id="@+id/jenis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Jenis"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="130dp"
                            android:text="Status"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/akreditas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="250dp"
                            android:text="Akreditas"
                            android:textSize="16dp"/>


                        <View android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="70dp"
                            android:background="#bbb"/>


                        <View android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="200dp"
                            android:background="#bbb"/>

                        <View android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="270dp"
                            android:background="#bbb"/>

                        <View android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="160dp"
                            android:background="#bbb"/>


                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="85dp"
                            android:background="@drawable/ic_location_on_black_24dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="85dp"
                            android:layout_marginLeft="40dp"
                            android:text="Jalan Bulaksumur"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="170dp"
                            android:text="Lihat maps"
                            android:textColor="@color/color"
                            android:layout_marginLeft="40dp"/>

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="210dp"
                            android:background="@drawable/ic_language_black_24dp"/>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>